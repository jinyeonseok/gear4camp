<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gear4camp.mapper.UserMapper">

    <!-- 회원 정보 저장 -->
    <insert id="insertUser">
        INSERT INTO users (user_id, name, password, email)
        VALUES (#{userId}, #{name}, #{password}, #{email});
    </insert>

    <!-- 회원 정보 조회 (userId 기준) -->
    <select id="findByUserId" resultType="com.gear4camp.domain.User">
        SELECT *
        FROM users
        WHERE user_id = #{userId};
    </select>

    <!-- 회원 정보 수정 (이름 & 이메일 변경 가능) -->
    <update id="updateUser">
        UPDATE users
        SET name = #{name}, email = #{email}, updated_at = CURRENT_TIMESTAMP
        WHERE user_id = #{userId};
    </update>

    <!-- 회원 정보 삭제 -->
    <delete id="deleteUser">
        DELETE
        FROM users
        WHERE user_id = #{userId};
    </delete>
</mapper>